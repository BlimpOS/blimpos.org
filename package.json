{
  "name": "blimpos.org",
  "version": "0.1.0",
  "description": "BlimpOS Website",
  "author": "Jeremy Boles <jeremy@centralstandard.com> (https://jeremyboles.com/)",
  "license": "MIT",
  "main": "n/a",
  "private": true,
  "dependencies": {
    "reason-react": "^0.5.3"
  },
  "devDependencies": {
    "bs-platform": "^4.0.18",
    "gatsby": "^2.0.115",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.re": [
      "bsrefmt --in-place",
      "git add"
    ],
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "build": "gatsby build",
    "re:build": "bsb -make-world",
    "re:clean": "bsb -clean-world",
    "re:start": "bsb -make-world -w",
    "start": "gatsby develop"
  }
}
